          // Add event listener to download button
         
document.getElementById('downloadBtn').addEventListener('click', () => {
  // Fetch the blog post content and prepare the PDF
  fetch(`/api/blog/${postId}`) // Replace with your actual endpoint
    .then(response => response.json())
    .then(post => {
      // Create a new element to hold the content
      const element = document.createElement('div');
      element.innerHTML = `
        <div>
          <h1>${post.title}</h1>
          <p>Published on: ${new Date(post.publishedDate).toLocaleDateString()}</p>
          <p>Category: ${post.category}</p>
          ${post.content}
        </div>
      `;

      // Wait for images to load
      const images = element.getElementsByTagName('img');
      const loadPromises = [];
      for (let img of images) {
        if (!img.complete) {
          loadPromises.push(new Promise((resolve, reject) => {
            img.onload = resolve;
            img.onerror = reject;
          }));
        }
      }

      Promise.all(loadPromises)
        .then(() => {
          // Generate PDF
          html2pdf(element, {
            margin: 1,
            filename: `${post.title}.pdf`,
            html2canvas: { scale: 2 },
            jsPDF: { unit: 'in', format: 'letter', orientation: 'portrait' }
          });
        })
        .catch(error => {
          {{!-- console.error('Error loading images:', error); --}}
          // Handle error display if needed
          const blogPostDetails = document.getElementById('blogPostDetails');
          blogPostDetails.innerHTML = '<p>Error loading blog post images</p>';
        });
    })
    .catch(error => {
