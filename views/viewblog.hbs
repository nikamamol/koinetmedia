  <script>
    // Format the date
    document.addEventListener('DOMContentLoaded', () => {
      // Array of month names for formatting
      const monthNames = [
        'Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun',
        'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'
      ];

      // Function to format date into "DD Mon YYYY" format
      const formatDate = (dateString) => {
        const date = new Date(dateString);
        const day = date.getDate();
        const month = monthNames[date.getMonth()];
        const year = date.getFullYear();
        return `${day} ${month} ${year}`;
      };

      // Extract the blog post ID from the URL
      const postId = window.location.pathname.split('/').pop();

      // Fetch the specific blog post
      fetch(`/api/blog/${postId}`)
        .then(response => response.json())
        .then(post => {
          // Format the created_at date
          const formattedDate = formatDate(post.created_at);
          const userName = localStorage.getItem('userName');

          // Create HTML structure for blog post details
          const blogPostDetails = document.getElementById('blogPostDetails');
          blogPostDetails.innerHTML = `
                <div class="row">
                    <div class="col-lg-1 mt-5 py-5">
                        <div class="col-12 col-lg-6 text-start text-lg-end my-auto sticky-icons d-flex flex-sm-row flex-lg-column">
