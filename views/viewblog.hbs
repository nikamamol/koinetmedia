     <script>
      // Assuming post.created_at is a string in ISO 8601 format (e.g., "2024-12-28T00:00:00Z")

// Format the date
document.addEventListener('DOMContentLoaded', () => {
    // Array of month names for formatting
    const monthNames = [
        'Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun',
        'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'
    ];

    // Function to format date into "DD Mon YYYY" format
    const formatDate = (dateString) => {
        const date = new Date(dateString);
        const day = date.getDate();
        const month = monthNames[date.getMonth()];
        const year = date.getFullYear();
        return `${day} ${month} ${year}`;
    };

    // Extract the blog post ID from the URL
    const postId = window.location.pathname.split('/').pop();

    // Fetch the specific blog post
    fetch(`/api/blog/${postId}`)
        .then(response => response.json())
        .then(post => {
            // Format the created_at date
            const formattedDate = formatDate(post.created_at);

            // Create HTML structure for blog post details
            const blogPostDetails = document.getElementById('blogPostDetails');
            blogPostDetails.innerHTML = `
                <div class="row">
                    <div class="col-lg-1 mt-5 py-5">
                        <div class="col-12 col-lg-6 text-start text-lg-end my-auto sticky-icons d-flex flex-sm-row flex-lg-column">
                            <a class="btn btn-square btn-danger rounded-circle me-2 mb-2" href="https://x.com/MediaKoinet">
                                <i class="fab fa-twitter"></i>
                            </a>
                            <a class="btn btn-square btn-danger rounded-circle me-2 mb-2" href="https://www.facebook.com/koiNetMediaITES">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a class="btn btn-square btn-danger rounded-circle me-2 mb-2" href="https://www.instagram.com/koinetmedia">
                                <i class="fab fa-instagram"></i>
                            </a>
                            <a class="btn btn-square btn-danger rounded-circle me-2 mb-2" href="https://www.linkedin.com/company/31556606">
                                <i class="fab fa-linkedin-in"></i>
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-7 mx-auto justify-items-center">
                        <div class="col-lg-12">
                            <img src="${post.imageUrl}" class="img-fluid mb-4" alt="blogimg" width="100%">
                            <p class="text-dark">
                                <span class="float-end">
                                    By <span class="fw-bold">amol patil</span>
                                </span>
                                <span class="fw-bold">
                                    Published on: <span class="fw-bold">${formattedDate}</span>
                                </span>
                            </p>
                            <h1 class="text-center text-dark my-4">${post.title}</h1>
                        </div>
                        <div>
                            ${post.content}
                        </div>
                    </div>
                </div>
            `;
        })
        .catch(error => {
            console.error('Error fetching blog post:', error);
            // Handle error display if needed
            const blogPostDetails = document.getElementById('blogPostDetails');
            blogPostDetails.innerHTML = '<p>Error loading blog post</p>';
        });
});

    </script>
