<html lang="en">
  <head>

    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
    <link rel="stylesheet" href="css/bootstrap.min.css" />
    <link rel="stylesheet" href="public/styles/style.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500&family=Roboto:wght@500;700&display=swap"
      rel="stylesheet"
    />
    <!-- Icon Font Stylesheet -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css"
      rel="stylesheet"
    />

    <!-- Libraries Stylesheet -->
    <link href="lib/animate/animate.min.css" rel="stylesheet" />
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" />
    <link href="lib/lightbox/css/lightbox.min.css" rel="stylesheet" />
  </head>
  <body>
    {{>nav}}
    <div class="container">
      <div class="row">
        <div class="col-12">
          <div>
            <h1 class="fw-bold text-center my-5">
              <span class="text_red">C</span>ase <span class="text_red">S</span>tudies Of <span class="text_red">K</span>oinet <span class="text_red">M</span>edia</h1>
          </div> 
          <div class="container">
            <div class="row">
              <div class="col">
                <img src="../public/images/casestudies.jpg" alt="casestudies" class="img-fluid"/>
              </div>
               <div class="text-center my-3">
                      <button id="open_modal" class="btn btn-danger btn-lg p-4 hover_btn">Download Now</button>
                   </div>
            </div>
          </div> 
        </div>
      </div>
    </div>

    {{!-- popup logic --}}

    <div class="modal fade" id="welcomeModal" tabindex="-1" aria-labelledby="welcomeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content p-5 shadow border-0 rounded-5">
        <div class="modal-header">
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body text-center">
          <img src="public/images/Logo.png" alt="" class="img-fluid mb-3" width="200px" height="50px">
          <p class="fw-bold fs-4">Case-Studies Of Koinet Media.</p>
          <p class="fs-2 fw-bold">Thank you for your interest! </p>
         <p>Our team will get in touch at  after downloading our case-studies</p>
          <form action="/downloadcase-studies" method="post" class="position-relative">
            <input class="form-control popupBg w-100 py-3 ps-4 pe-5" type="email" name="email" placeholder="Enter your email " required>
            <button type="submit" id="downloadpdfbutton" class="btn btn-danger py-2 position-absolute top-0 end-0 mt-2 me-2">Download PDF</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      var button = document.getElementById('open_modal');
      var welcomeModal = new bootstrap.Modal(document.getElementById('welcomeModal'));

      button.addEventListener('click', function() {
        welcomeModal.show();
      });
    });
  </script>

  <script>
    document.getElementById('downloadpdfbutton').addEventListener('click', function() {
      var pdfFilePath = 'public/images/CaseStudy.pdf';
      var link = document.createElement('a');
      link.href = pdfFilePath;
      link.download = pdfFilePath.split('/').pop();
      link.click();
    });
  </script>

    {{>recaptch}}
    
    {{>footer}}
    <!-- Back to Top -->
    <a
      href="#"
      class="btn btn-lg btn-danger btn-lg-square rounded-circle back-to-top"
    ><i class="bi bi-arrow-up"></i></a>
    <!-- JavaScript Libraries -->
    <script
      src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"
    ></script>
    <script src="lib/wow/wow.min.js"></script>
    <script src="lib/easing/easing.min.js"></script>
    <script src="lib/waypoints/waypoints.min.js"></script>
    <script src="lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="lib/lightbox/js/lightbox.min.js"></script>

    <!-- Template Javascript -->
    <script src="../public/js/main.js"></script>
    <script>
    document.getElementById('downloadButtoncasestudies').addEventListener('click', function() {
        // Replace 'example.pdf' with the path to your PDF file
        var pdfFilePath = '../public/images/CaseStudy.pdf';
        var link = document.createElement('a');
        link.href = pdfFilePath;
        link.download = pdfFilePath.split('/').pop();
        link.click();
    });
</script>

  </body>
</html>