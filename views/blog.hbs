    <!-- Fetch and Display Blog Posts -->
    <script>
  document.addEventListener('DOMContentLoaded', () => {
    const monthNames = [
        'Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun',
        'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'
    ];

    // Function to format date into "DD Mon YYYY" format
    const formatDate = (dateString) => {
        const date = new Date(dateString);
        const day = date.getDate();
        const month = monthNames[date.getMonth()];
        const year = date.getFullYear();
        return `${day} ${month} ${year}`;
    };

    const blogPostsElement = document.querySelector('#blogPosts .row');
    const noDataMessage = '<div class="col text-center"><p>No blog posts available.</p></div>';

    const fetchBlogPosts = (page = 1, search = '', category = '') => {
        let url = `/api/blogs?page=${page}`;
        if (search) {
            url += `&search=${search}`;
        }
        if (category) {
            url += `&category=${category}`;
        }
        fetch(url)
            .then(response => response.json())
            .then(posts => {
                blogPostsElement.innerHTML = ''; // Clear previous posts

                if (posts.length === 0) {
                    blogPostsElement.innerHTML = noDataMessage;
                } else {
                    posts.forEach(post => {
                        const formattedDate = formatDate(post.created_at);
                        const postElement = document.createElement('div');
                        postElement.classList.add('col-lg-4', 'col-md-6', 'wow', 'fadeInUp');
                        postElement.setAttribute('data-wow-delay', '0.1s');
                        postElement.innerHTML = `
                            <div class="service-item position-relative h-100">
                                <div class="service-text rounded-3 shadow blogHover">
                                    <div class="mb-4">
                                        <img class="img-fluid" src="${post.imageUrl}" alt="Icon" style="border-radius: 10px 10px 0 0;">
                                    </div>
                                    <div class="p-4">
                                        <a href="/viewblog/${post.id}" class="mb-3 cursor-pointer fs-4 fw-bold text-decoration-none">${post.title}</a>
                                        <p class="text-start my-2">Published on : ${formattedDate}</p>
                                    </div>
                                </div>
                                <div class="service-btn rounded-0 rounded-bottom">
                                    <a class="text-primary fw-medium" href="/viewblog/${post.id}">Read More<i class="bi bi-chevron-double-right ms-2"></i></a>
                                </div>
                            </div>
                        `;
                        blogPostsElement.appendChild(postElement);
                    });
                }
            })
            .catch(error => {
                console.error('Error fetching blog posts:', error);
                blogPostsElement.innerHTML = noDataMessage; // Display no data message on error
            })
            .finally(() => {
                document.getElementById('spinner').classList.remove('show'); // Remove spinner
            });
    };

    // Handle form submission for search and category
    const searchForm = document.getElementById('searchForm');
    searchForm.addEventListener('submit', (event) => {
        event.preventDefault();
        const searchInput = document.getElementById('searchInput').value.trim();
        const category = document.getElementById('categoryDropdown').value;
        fetchBlogPosts(1, searchInput, category); // Fetch first page of search results
    });

    // Handle category dropdown change
    const categoryDropdown = document.getElementById('categoryDropdown');
    categoryDropdown.addEventListener('change', (event) => {
        const searchInput = document.getElementById('searchInput').value.trim();
        const category = event.target.value;
        fetchBlogPosts(1, searchInput, category); // Fetch first page of filtered results based on category
    });

    // Fetch initial blog posts without search or category filter
    fetchBlogPosts();

});

    </script>

